---
layout: default
---
<!-- _layouts/cv.html -->
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
  </header>

  <article>
    {% if page.cv_pdf %}
      <div class="cv-container">
        <object data="{{ page.cv_pdf | prepend: '/assets/pdf/' | relative_url }}#pagemode=none" width="100%" height="1000" type='application/pdf'>
          <p>Your browser doesn't support PDFs. 
            <a href="{{ page.cv_pdf | prepend: '/assets/pdf/' | relative_url }}" target="_blank">Download the PDF</a>.
          </p>
        </object>
      </div>
    {% else %}
      <p>CV PDF not found. Please check the cv_pdf configuration in your CV page.</p>
    {% endif %}
  </article>
</div>